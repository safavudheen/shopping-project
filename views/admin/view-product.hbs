<section>
    <div class="container">
      <div class="row">
        <a href="/admin/add-product" class="btn btn-success ml-auto mt-4">Add Product</a>

      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width:50px;height:60px"src="/product-image/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class='btn btn-danger' onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
                                  {{!--  2nd use ?id={{this.id}} --}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>